<h4><%- messages() %></h4>
<br>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% console.log(error.msg); %>
            <% if(error.msg != "Invalid value") { %>
                <li><%= error.msg %></li>
            <% } %>
        <%  }) %>
   </ul>
<% } %>

<% if (title) { %>
    <h2><%= title %></h2>
<% } else {res.redirect('/')} %>
